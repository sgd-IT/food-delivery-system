/* ==================== 公共样式库 ==================== */
/* 使用统一的设计变量系统，对应 art-design-pro-main 的设计规范 */

/* ==================== 基础组件 ==================== */

/* 卡片样式 */
.box {
  border-radius: var(--radius-md);
  background-color: var(--bg-white);
  margin: 0 0 var(--spacing-lg) 0;
  box-sizing: border-box;
  position: relative;
  box-shadow: var(--shadow-sm);
}

.art-card {
  background: var(--bg-white);
  border: 1px solid var(--card-border);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
  padding: var(--spacing-2xl);
}

.art-card-sm {
  padding: var(--spacing-xl);
  border-radius: var(--radius-sm);
}

/* 主容器 */
.main {
  width: 710rpx;
  margin: 0 auto;
}

/* 标签样式 */
.tag {
  width: 68rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: var(--radius-sm);
  background: linear-gradient(135deg, #e1f1fe 0%, #d1e8ff 100%);
  display: inline-block;
  margin-right: var(--spacing-xs);
  color: var(--primary-color);
  font-size: var(--font-sm);
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: var(--font-medium);
  box-shadow: 0 2rpx 4rpx rgba(55, 125, 255, 0.1);
}

.tag2 {
  background: linear-gradient(135deg, #fef8e7 0%, #fef2d7 100%);
}

.tag3 {
  background: linear-gradient(135deg, #e7fef8 0%, #d5fef5 100%);
}

/* ==================== 按钮样式 ==================== */

.btn-primary {
  background: var(--primary-gradient);
  color: var(--text-white);
  border-radius: var(--radius-full);
  box-shadow: var(--shadow-primary);
  font-weight: var(--font-medium);
  border: none;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
  transition: all 0.1s;
}

.btn-secondary {
  background: var(--bg-white);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
}

.btn-danger {
  background: var(--danger-color);
  color: var(--text-white);
  border-radius: var(--radius-md);
}

.btn-disabled {
  background-color: #d8d8d8;
  color: var(--text-white);
  border-radius: var(--radius-full);
}

/* ==================== 订单相关样式 ==================== */

.recent_orders {
  margin: var(--spacing-lg) auto;
}

.recent_orders .order_lists {
  padding: 28rpx var(--spacing-lg) 0;
}

.recent_orders .order_lists .date_type {
  opacity: 1;
  font-size: var(--font-base);
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: var(--font-normal);
  text-align: left;
  height: 40rpx;
  line-height: 40rpx;
  letter-spacing: 0px;
}

.recent_orders .order_lists .date_type .time {
  display: inline-block;
  color: var(--text-secondary);
}

.recent_orders .order_lists .date_type .type {
  display: inline-block;
  color: var(--text-tertiary);
  float: right;
}

.recent_orders .order_lists .date_type .status {
  color: var(--primary-color);
}

.recent_orders .order_lists .orderBox {
  position: relative;
}

.recent_orders .order_lists .food_num {
  padding-bottom: 32rpx;
  flex: 1;
  display: flex;
}

.recent_orders .order_lists .food_num .food_num_item {
  margin-top: var(--spacing-xl);
  margin-right: 14rpx;
  width: 156rpx;
  height: 120rpx;
  display: inline-block;
}

.recent_orders .order_lists .food_num .food_num_item .img image {
  width: 156rpx;
  height: 120rpx;
  border-radius: var(--radius-md);
  display: block;
  box-shadow: var(--shadow-sm);
}

.recent_orders .order_lists .food_num .food {
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: var(--spacing-sm);
  font-size: var(--font-md);
  color: var(--text-tertiary);
}

.recent_orders .order_lists .numAndAum {
  height: 160rpx;
  opacity: 1;
  font-size: var(--font-md);
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: var(--font-normal);
  text-align: left;
  color: var(--text-tertiary);
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
  background: rgba(255, 255, 255, 0.76);
  padding: 46rpx 10rpx 0;
}

.recent_orders .order_lists .numAndAum view:first-child text {
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: var(--font-bold);
  color: var(--text-secondary);
}

.recent_orders .order_lists .numAndAum view:last-child {
  font-size: var(--font-sm);
  color: var(--text-tertiary);
}

.recent_orders .order_lists .numAndAum view:last-child text {
  padding: 0 10rpx;
}

.againBtn {
  padding-bottom: var(--spacing-lg);
  height: 72rpx;
  text-align: right;
}

.againBtn .new_btn {
  width: 172rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-color: var(--border-light);
  background-color: var(--bg-white);
  border-radius: var(--radius-sm);
  font-size: var(--font-base);
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: var(--font-medium);
  color: var(--text-secondary);
  margin-left: var(--spacing-lg);
  display: inline-block;
}

.againBtn .btn {
  background: var(--primary-gradient);
  color: var(--text-white) !important;
  box-shadow: var(--shadow-primary);
}

.phoneIcon {
  /* 移除背景图，使用 uni-icons 组件代替 */
  display: inline-block;
  vertical-align: middle;
}

/* ==================== 弹窗样式 ==================== */

.container .popup-content {
  height: auto;
  padding: 0 0 0rpx;
  display: block;
}

.container .uni-popup {
  z-index: 9999;
}

.container .uni-popup .popup-content {
  border-radius: var(--radius-sm) var(--radius-sm) 0 0;
}

.popup-content {
  align-items: center;
  justify-content: center;
  padding: 15px;
  height: 50px;
  background-color: var(--bg-white);
}

.popupBox .popupTitle {
  background: #fef6e9;
  padding: var(--spacing-xl) 30rpx;
  line-height: 34rpx;
  border-radius: var(--radius-sm) var(--radius-sm) 0 0;
}

.popupBox .popupTitle text {
  color: var(--primary-color);
}

.popupBox .popupCon {
  padding: 30rpx 0;
}

.popupBox .popupCon .popupBtn {
  display: flex;
  padding: 0 68rpx 38rpx;
  border-bottom: 2rpx solid var(--border-dark);
}

.popupBox .popupCon .popupBtn text {
  flex: 1;
  text-align: center;
  font-size: var(--font-base);
  line-height: 40rpx;
}

.popupBox .popupCon .popupBtn text:first-child {
  text-align: left;
}

.popupBox .popupCon .popupBtn text:nth-child(2) {
  font-size: var(--font-lg);
  font-weight: var(--font-medium);
}

.popupBox .popupCon .popupBtn text:last-child {
  text-align: right;
}

.popupBox .popupCon .popupList > view {
  border-bottom: 2rpx solid var(--border-dark);
  padding: 40rpx 0 27rpx;
  text-align: center;
}

.popupBox .popupSet {
  background: var(--bg-gray-light);
  padding: 30rpx;
  font-size: var(--font-base);
  text-align: center;
  margin: 0 32rpx;
  border-radius: var(--radius-sm);
  color: var(--text-tertiary);
}

.popupBox .popupSet view:last-child {
  padding-top: 34rpx;
  color: var(--text-secondary);
}

.popupBox .popupSet view:last-child radio-group {
  display: flex;
  width: 100%;
}

.popupBox .popupSet view:last-child radio-group label {
  flex: 1;
  display: block;
}

.popupBox .popupSet view:last-child radio-group label radio {
  -webkit-transform: scale(0.7);
  transform: scale(0.7);
}

.closePopup {
  background: var(--bg-white);
  padding: 40rpx;
  text-align: center;
}

.colseShop {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: rgba(0, 0, 0, 0);
  z-index: 9999;
}

.colseShop .shop {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.63);
  color: var(--text-white);
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: var(--font-lg);
  font-weight: var(--font-bold);
}

.phoneCon .popupBox {
  text-align: center;
  color: var(--text-secondary);
  font-size: var(--font-lg);
  line-height: 44rpx;
}

.phoneCon .popupBox .popup-content {
  padding: 0;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-bottom: var(--spacing-lg);
}

.phoneCon .popupBox .popup-content > view {
  height: 120rpx;
  line-height: 120rpx;
  font-size: var(--font-lg);
  color: var(--text-secondary);
}

.phoneCon .popupBox .popup-content > view:first-child {
  border-bottom: 2rpx solid var(--border-dark);
  color: var(--text-tertiary);
  font-size: var(--font-md);
}

.phoneCon .popupBox .popup-content > view:last-child {
  height: 100rpx;
  line-height: 100rpx;
}

.phoneCon .closePopup {
  border-top: 12rpx solid var(--bg-gray-light);
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.comPopupBox .popup-content {
  border-radius: var(--radius-sm);
  width: 500rpx;
  text-align: center;
  font-size: var(--font-base);
  line-height: 40rpx;
  height: auto;
  padding: 0;
}

.comPopupBox .popup-content .text {
  padding: 60rpx;
}

.comPopupBox .popup-content .btn {
  border-top: 2rpx solid var(--border-dark);
  display: flex;
  font-size: var(--font-lg);
}

.comPopupBox .popup-content .btn > view {
  padding: var(--spacing-xl) 0;
  flex: 1;
}

.comPopupBox .popup-content .btn > view:first-child {
  border-right: 2rpx solid var(--border-dark);
}

.comPopupBox .popup-content .btn > view:last-child {
  color: var(--primary-color);
}

/* ==================== 表单控件样式 ==================== */

.payBox .wx-checkbox-input-checked,
.payBox .wx-radio-input-checked,
.payBox .wx-switch-input-checked {
  background-color: var(--primary-color) !important;
  border-color: var(--primary-color) !important;
  color: var(--text-white) !important;
  -webkit-transform: scale(0.7);
  transform: scale(0.7);
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: var(--font-bold);
  color: var(--text-white);
  border: 1rpx solid var(--primary-color);
  background: var(--primary-color);
}

.dish_dishFlavor {
  font-size: var(--font-xs);
  color: var(--text-tertiary);
}

/* ==================== 工具类 ==================== */

.fix-pc-padding {
  padding: 0 100rpx;
}

.uni-header-logo {
  padding: 30rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}

.uni-header-image {
  width: 200rpx;
  height: 200rpx;
}

.uni-hello-text {
  color: #7A7E83;
}

.uni-hello-addfile {
  text-align: center;
  line-height: 300rpx;
  background: var(--bg-white);
  padding: 50rpx;
  margin-top: var(--spacing-lg);
  font-size: 38rpx;
  color: #808080;
}
