.navBar {
  position: fixed;
  display: flex;
  z-index: 9;
  top: 0;
  left: 0;
  width: 100vw;
  box-sizing: border-box;
  height: 200rpx;
  opacity: 1;
  overflow: hidden;
}
.navBar .leftNav .back {
  width: 88rpx;
  height: 88rpx;
}
.navBar .centerNav {
  width: calc(100vw - 176rpx);
  text-align: center;
  line-height: 88rpx;
  font-size: 36rpx;
  color: #fff;
}
.navBar .logo {
  height: 66rpx;
  width: 184rpx;
}
.navBar .index_bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.navBar .test_image {
  height: 56rpx;
  width: 56rpx;
}
.navBar .person-box {
  position: fixed;
  left: 38rpx;
  z-index: 9999;
  top: 40rpx;
  display: flex;
  align-items: center;
}
.navBar .person-title {
  flex: 1;
  height: 36rpx;
  font-size: 26rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: left;
  color: #ffffff;
  line-height: 36rpx;
  letter-spacing: 0px;
  margin-left: 14rpx;
}

